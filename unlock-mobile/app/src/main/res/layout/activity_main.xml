<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DDDDDA"
        android:id="@+id/l1">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="ðŸ“®Unlock"/>

        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="60dp"
            android:text="User"/>
    </LinearLayout>

<!--
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="192.168.1.47:21567"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/ipAddress"
        android:layout_below="@+id/l1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
-->
    <Button
        android:text="Open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:id="@+id/btnUp" />

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDown"
        android:layout_below="@+id/btnUp"
        android:layout_alignStart="@+id/btnUp"
        android:layout_marginTop="16dp" />

    <Button
        android:text="Historique d'application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:layout_below="@+id/btnDown"
        android:layout_alignStart="@+id/btnUp"
        android:layout_marginTop="16dp" />

    <Button
        android:text="Historique de Raspberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn3"
        android:layout_alignStart="@+id/btnUp"
        android:layout_marginTop="16dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userEdit"
        android:layout_below="@id/btn4"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/baseline_account_circle_24"
        android:layout_alignStart="@+id/btnUp"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit"
        android:layout_below="@id/userEdit"
        android:src="@drawable/baseline_exit_to_app_24"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignStart="@+id/btnUp"
        ></ImageButton>





</RelativeLayout>